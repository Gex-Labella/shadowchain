{
  "name": "@shadowchain/crypto",
  "version": "1.0.0",
  "description": "Shared cryptography module for Shadow Chain",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "prepare": "npm run build"
  },
  "keywords": [
    "crypto",
    "libsodium",
    "encryption",
    "polkadot"
  ],
  "author": "Shadow Chain Team",
  "license": "Apache-2.0",
  "dependencies": {
    "libsodium-wrappers-sumo": "^0.7.13",
    "@polkadot/util": "^12.6.2",
    "@polkadot/util-crypto": "^12.6.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/libsodium-wrappers-sumo": "^0.7.8",
    "@types/node": "^20.10.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^4.9.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**"
    ]
  }
}
