# Backend Environment Variables

# Server Configuration
NODE_ENV=development
BACKEND_PORT=3001
CORS_ORIGIN=http://localhost:3000

# Substrate Node
SUBSTRATE_WS=ws://localhost:9944

# IPFS Configuration
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080
PINNING_SERVICE=local
# For web3storage: WEB3_STORAGE_TOKEN=your_token_here
# For pinata: PINATA_API_KEY=your_key_here
# For pinata: PINATA_SECRET_KEY=your_secret_here

# GitHub OAuth (Required for user connections)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:3001/api/auth/github/callback

# Legacy GitHub Token (Optional - for centralized fetching)
# GITHUB_TOKEN=your_github_personal_token
# GITHUB_REPOS=owner/repo1,owner/repo2

# Twitter Configuration (Optional)
# TWITTER_BEARER_TOKEN=your_twitter_bearer_token
# TWITTER_USER_ID=your_twitter_user_id

# Fetcher Settings
FETCH_INTERVAL_MINUTES=15
MAX_ITEMS_PER_SYNC=50

# Security Settings
ENCRYPT_IN_MEMORY_ONLY=false
MAX_CONTENT_SIZE=10485760
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Database (Optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/shadowchain
USE_DATABASE_INDEXING=false

# Development Settings
ENABLE_DEBUG_ENDPOINTS=false
MOCK_EXTERNAL_APIS=false

# Production Settings
# NODE_ENV=production
# CORS_ORIGIN=https://shadowchain.locsafe.org
# SUBSTRATE_WS=wss://shadowchain.locsafe.org/ws
# GITHUB_CALLBACK_URL=https://shadowchain.locsafe.org/api/auth/github/callback