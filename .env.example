# Shadow Chain Environment Configuration
# Copy this file to .env and fill in your values

# Node Environment
NODE_ENV=development

# API Keys (Required)
GITHUB_TOKEN=your_github_personal_access_token_here
TWITTER_BEARER_TOKEN=your_twitter_api_v2_bearer_token_here

# Substrate Configuration
SUBSTRATE_WS=ws://localhost:9944
SUBSTRATE_TYPES_BUNDLE={}

# IPFS Configuration
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080
PINNING_SERVICE=local # Options: local, web3storage, pinata
WEB3_STORAGE_TOKEN=your_web3_storage_token_if_using
PINATA_API_KEY=your_pinata_api_key_if_using
PINATA_SECRET_KEY=your_pinata_secret_key_if_using

# Backend Configuration
BACKEND_PORT=3001
API_BASE_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:3000

# Frontend Configuration  
REACT_APP_API_URL=http://localhost:3001
REACT_APP_WS_URL=ws://localhost:9944
REACT_APP_IPFS_GATEWAY=http://localhost:8080

# Fetcher Configuration
FETCH_INTERVAL_MINUTES=15
GITHUB_REPOS=username/repo1,username/repo2
TWITTER_USER_ID=your_twitter_user_id
MAX_ITEMS_PER_SYNC=50

# Security Configuration
ENCRYPT_IN_MEMORY_ONLY=true
MAX_CONTENT_SIZE=10485760 # 10MB in bytes
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000 # 15 minutes in ms

# Database Configuration (Optional)
DATABASE_URL=postgresql://user:password@localhost:5432/shadowchain
USE_DATABASE_INDEXING=false

# AWS Configuration (Production)
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your_account_id
AWS_ECR_REGISTRY=your_account_id.dkr.ecr.us-east-1.amazonaws.com
AWS_S3_BUCKET=shadowchain-frontend
AWS_CLOUDFRONT_DISTRIBUTION_ID=your_distribution_id

# Logging Configuration
LOG_LEVEL=info # Options: debug, info, warn, error
LOG_FORMAT=json # Options: json, pretty

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_for_error_tracking
DATADOG_API_KEY=your_datadog_api_key_for_metrics

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_ENDPOINTS=true
MOCK_EXTERNAL_APIS=false

# Chain Development
CHAIN_SPEC=dev # Options: dev, local, staging, production
ENABLE_CHAIN_TELEMETRY=false
VALIDATOR_NAME=alice # For dev mode

# Consent Configuration
CONSENT_EXPIRY_DAYS=365
REQUIRE_RENEWAL=true

# Backup Configuration
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30